<!-- res/drawable/custom_loader.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background layer -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#3a3a3a" /> <!-- Dark gray background for contrast -->
        </shape>
    </item>

    <!-- Progress layer with neon gradient animation -->
    <item>
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="8dp" />
                <gradient
                    android:startColor="#00FFA3"
                    android:centerColor="#00E4FF"
                    android:endColor="#DA00FF"
                    android:angle="0" />
            </shape>
        </clip>
    </item>
</layer-list>
