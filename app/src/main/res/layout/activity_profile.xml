<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:layout_gravity="center">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Name: User's Name" />

        <TextView
            android:id="@+id/profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_name"
            android:textSize="16sp"
            android:text="Email: user@example.com" />

        <ImageView
            android:id="@+id/qr"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_below="@id/profile_email"
            android:cropToPadding="true"
            android:padding="0dp"
            android:layout_marginLeft="-60dp"
            android:paddingHorizontal="0dp"
            android:paddingVertical="0dp"
            android:paddingStart="0dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            app:srcCompat="@android:drawable/alert_light_frame" />

        <TextView
            android:id="@+id/profile_honor_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/qr"
            android:layout_marginTop="2dp"
            android:text="Honor Score: 0"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/profile_roll_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_honor_score"
            android:layout_marginTop="1dp"
            android:text="Roll Number: 0"
            android:textSize="16sp" />


    </RelativeLayout>

</RelativeLayout>
