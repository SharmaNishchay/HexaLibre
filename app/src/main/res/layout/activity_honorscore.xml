<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#1f2122">

    <!-- Honor Score Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Honor Score"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFEB3B"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <!-- Honor Score Value Display with Icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_honor_score"
            android:tint="#FFEB3B"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/honorScoreValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="85"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="#FFEB3B" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/ 100"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_marginStart="4dp" />
    </LinearLayout>

    <!-- Progress Bar with Custom Style -->


    <!-- Motivational Message -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You're doing great! Keep up the good work."
        android:textSize="16sp"
        android:textColor="#B3FFEB3B"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/gold_faded_line" />

    <!-- Honor Benefits Section Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Benefits of a High Honor Score"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <!-- Benefit Cards -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Benefit 1: Increased Hold Chance -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:elevation="2dp"
            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/starpoint"
                android:layout_marginEnd="12dp"
                app:tint="#FFEB3B" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Higher chance of holding your desired book."
                android:textSize="16sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Benefit 2: Priority Access -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:elevation="2dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/starpoint"
                android:layout_marginEnd="12dp"
                app:tint="#FFEB3B" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Priority access to limited edition books and materials."
                android:textSize="16sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Benefit 3: Bonus Points -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="horizontal"
            android:elevation="2dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/starpoint"
                android:layout_marginEnd="12dp"
                app:tint="#FFEB3B" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Earn bonus points for exemplary behavior and library usage."
                android:textSize="16sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
