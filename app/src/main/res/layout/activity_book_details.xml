<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:padding="16dp"
    android:weightSum="100">

    <!-- Book Image Section -->
    <ImageView
        android:id="@+id/bookImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        android:layout_marginBottom="20dp" />

    <!-- Book Title Section -->
    <TextView
        android:id="@+id/bookTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book Title"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_weight="50"
        android:layout_marginBottom="20dp" />

    <!-- Book Details Section -->
    <TextView
        android:id="@+id/bookDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is a detailed description of the book."
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:gravity="start"
        android:layout_weight="30"
        android:layout_marginBottom="20dp" />

    <!-- Book Availability Section -->
    <TextView
        android:id="@+id/bookAvailability"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Availability: Available"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:gravity="start"
        android:layout_weight="10"
        android:layout_marginBottom="20dp" />

    <!-- Hold Button -->
    <Button
        android:id="@+id/holdButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hold"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_hold_background"
        android:layout_marginBottom="20dp" />

    <!-- Issue Button -->
    <Button
        android:id="@+id/issueButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Issue"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_issue_background"
        android:layout_marginBottom="20dp" />

    <!-- Cancel Button -->
    <Button
        android:id="@+id/Button_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_cancel" />

</LinearLayout>
